<table class='sensors'>
  <tr>
    <th>Type</th>
    <th>Site</th>
    <th>JSON</th>
    <th>Last sampled</th>
  </tr>
  <% @sites.each do |site| %>
    <tr>
      <td>
        <%= site.measurement_type %>
      </td>
      <td>
        <%= link_to site.site_name, site %> 
      </td>
      <td>
        [
          <%= link_to 'site', site_path(site, :format => :json) %>,
          <%= link_to 'samples', site_samples_path(:site_id => site.id, :format => :json) %> 
        ]
      </td>
      <td>
        <%= usable_time site.last_sampled_at %>
      </td>
    </tr>
  <% end %>
</table>
